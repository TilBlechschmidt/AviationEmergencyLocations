@import url('https://rsms.me/inter/inter.css');

@tailwind base;

html, body, #svelte {
    width: 100%;
    height: 100%;
}

html, body, #svelte, .mapboxgl-map {
  font-family: 'Inter', sans-serif !important;
}

@supports (font-variation-settings: normal) {
  html, body, #svelte, .mapboxgl-map {
    font-family: 'Inter var', sans-serif !important;
  }
}

@tailwind components;
@tailwind utilities;

.card {
  @apply bg-white rounded-xl drop-shadow shadow-xl;
}

.custom-select {
  @apply font-mono;

  appearance: none;
  cursor: pointer;
  border-bottom: 1px dashed #999;

  background: url(data:image/svg+xml;base64,)
    no-repeat 101% 50%;
  background-size: 12px;
  background-position: 100% -4px;
  padding-right: 15px;
}

.custom-select:focus {
  outline: none;
}

.map-component-simulation {
  font-size: 12px;
  line-height: 20px;
}